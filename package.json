<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Package JSON Editor</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500&display=swap');
        
        body {
            background-color: #0d1117;
            color: #e6edf3;
            font-family: 'Fira Code', monospace;
            padding: 20px;
        }

        .code-container {
            background-color: #0d1117;
            border: 1px solid #30363d;
            border-radius: 6px;
            padding: 16px;
            line-height: 1.6;
            font-size: 14px;
            overflow-x: auto;
            white-space: pre;
        }

        .line-number {
            color: #6e7681;
            display: inline-block;
            width: 30px;
            text-align: right;
            margin-right: 16px;
            user-select: none;
        }

        .key { color: #7ee0ff; }
        .string { color: #a5d6ff; }
        .number { color: #d2a8ff; }
        .keyword { color: #ff7b72; }
        .punctuation { color: #e6edf3; }
        
        .copy-btn {
            position: fixed;
            top: 20px;
            right: 20px;
            background: #238636;
            color: white;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-family: sans-serif;
            border: none;
            transition: background 0.2s;
        }
        
        .copy-btn:hover { background: #2ea043; }
    </style>
</head>
<body>

    <button class="copy-btn" onclick="copyCode()">Copier le code</button>

    <div class="code-container" id="json-content">
<span class="line-number">1</span><span class="punctuation">{</span>
<span class="line-number">2</span>  <span class="key">"name"</span><span class="punctuation">:</span> <span class="string">"openflow-client"</span><span class="punctuation">,</span>
<span class="line-number">3</span>  <span class="key">"private"</span><span class="punctuation">:</span> <span class="keyword">true</span><span class="punctuation">,</span>
<span class="line-number">4</span>  <span class="key">"version"</span><span class="punctuation">:</span> <span class="string">"1.0.0"</span><span class="punctuation">,</span>
<span class="line-number">5</span>  <span class="key">"type"</span><span class="punctuation">:</span> <span class="string">"module"</span><span class="punctuation">,</span>
<span class="line-number">6</span>  <span class="key">"scripts"</span><span class="punctuation">:</span> <span class="punctuation">{</span>
<span class="line-number">7</span>    <span class="key">"dev"</span><span class="punctuation">:</span> <span class="string">"vite"</span><span class="punctuation">,</span>
<span class="line-number">8</span>    <span class="key">"build"</span><span class="punctuation">:</span> <span class="string">"tsc && vite build"</span><span class="punctuation">,</span>
<span class="line-number">9</span>    <span class="key">"lint"</span><span class="punctuation">:</span> <span class="string">"eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"</span><span class="punctuation">,</span>
<span class="line-number">10</span>    <span class="key">"preview"</span><span class="punctuation">:</span> <span class="string">"vite preview"</span>
<span class="line-number">11</span>  <span class="punctuation">}</span><span class="punctuation">,</span>
<span class="line-number">12</span>  <span class="key">"dependencies"</span><span class="punctuation">:</span> <span class="punctuation">{</span>
<span class="line-number">13</span>    <span class="key">"axios"</span><span class="punctuation">:</span> <span class="string">"^1.6.2"</span><span class="punctuation">,</span>
<span class="line-number">14</span>    <span class="key">"clsx"</span><span class="punctuation">:</span> <span class="string">"^2.1.0"</span><span class="punctuation">,</span>
<span class="line-number">15</span>    <span class="key">"lucide-react"</span><span class="punctuation">:</span> <span class="string">"^0.344.0"</span><span class="punctuation">,</span>
<span class="line-number">16</span>    <span class="key">"react"</span><span class="punctuation">:</span> <span class="string">"^18.2.0"</span><span class="punctuation">,</span>
<span class="line-number">17</span>    <span class="key">"react-dom"</span><span class="punctuation">:</span> <span class="string">"^18.2.0"</span><span class="punctuation">,</span>
<span class="line-number">18</span>    <span class="key">"reactflow"</span><span class="punctuation">:</span> <span class="string">"^11.10.1"</span><span class="punctuation">,</span>
<span class="line-number">19</span>    <span class="key">"tailwind-merge"</span><span class="punctuation">:</span> <span class="string">"^2.2.1"</span>
<span class="line-number">20</span>  <span class="punctuation">}</span><span class="punctuation">,</span>
<span class="line-number">21</span>  <span class="key">"devDependencies"</span><span class="punctuation">:</span> <span class="punctuation">{</span>
<span class="line-number">22</span>    <span class="key">"@types/react"</span><span class="punctuation">:</span> <span class="string">"^18.2.64"</span><span class="punctuation">,</span>
<span class="line-number">23</span>    <span class="key">"@types/react-dom"</span><span class="punctuation">:</span> <span class="string">"^18.2.21"</span><span class="punctuation">,</span>
<span class="line-number">24</span>    <span class="key">"@vitejs/plugin-react"</span><span class="punctuation">:</span> <span class="string">"^4.2.1"</span><span class="punctuation">,</span>
<span class="line-number">25</span>    <span class="key">"autoprefixer"</span><span class="punctuation">:</span> <span class="string">"^10.4.18"</span><span class="punctuation">,</span>
<span class="line-number">26</span>    <span class="key">"postcss"</span><span class="punctuation">:</span> <span class="string">"^8.4.35"</span><span class="punctuation">,</span>
<span class="line-number">27</span>    <span class="key">"tailwindcss"</span><span class="punctuation">:</span> <span class="string">"^3.4.1"</span><span class="punctuation">,</span>
<span class="line-number">28</span>    <span class="key">"typescript"</span><span class="punctuation">:</span> <span class="string">"^5.2.2"</span><span class="punctuation">,</span>
<span class="line-number">29</span>    <span class="key">"vite"</span><span class="punctuation">:</span> <span class="string">"^5.1.4"</span>
<span class="line-number">30</span>  <span class="punctuation">}</span>
<span class="line-number">31</span><span class="punctuation">}</span></div>

    <script>
        function copyCode() {
            const rawJson = `{
  "name": "openflow-client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "clsx": "^2.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.10.1",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}`;
            const el = document.createElement('textarea');
            el.value = rawJson;
            document.body.appendChild(el);
            el.select();
            document.execCommand('copy');
            document.body.removeChild(el);
            
            const btn = document.querySelector('.copy-btn');
            btn.innerText = 'CopiÃ© !';
            btn.style.background = '#1f6feb';
            setTimeout(() => {
                btn.innerText = 'Copier le code';
                btn.style.background = '#238636';
            }, 2000);
        }
    </script>
</body>
</html>
